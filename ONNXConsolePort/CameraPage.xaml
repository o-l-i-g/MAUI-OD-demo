<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="ONNXConsolePort.CameraPage"             
             Title="CameraPage">
    <VerticalStackLayout>
        <Label 
            Text="Testing live camera feed using Camar.MAUI"
            VerticalOptions="Fill" 
            HorizontalOptions="Center" />

        <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="200"/>

        <Button x:Name="cameraButton" Text="Loading" Clicked="cameraButton_Clicked" />

        <Button x:Name="snapShotButton" Text="Loading" Clicked="snapShotButton_Clicked" />

        <Image x:Name="processedImage" WidthRequest="300" HeightRequest="200" />


    </VerticalStackLayout>
</ContentPage>